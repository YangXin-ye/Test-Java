<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iweb.mapper.CategoriesMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, p_id, name, season
    </sql>
    <select id="categoryNameByPId" resultType="com.iweb.vo.IndexCategoryNamesVO">
        select c.name from  categories c left join products p on p.id = c.p_id where p.id = #{pId};
    </select>


</mapper>
